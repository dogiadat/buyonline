css:
  .rate-vote {
    font-size: 15px;
  }
.section
  .container
    .row
      .col-sm-5.col-md-3
        .list-category-sidebar
          .w3l_fresh_vegetables_grid.w3l_fresh_vegetables_grid_left
            ul
              li
                i.fa.fa-check aria-hidden="true"
                = link_to "Tất cả", restaurants_path
              - @categories.each do |category|
                li
                  i.fa.fa-check aria-hidden="true"
                  = link_to category.name, restaurants_path(category_id: category.id)
        .sidebar-module.mb-40.mt-40
          .sidebar-title
            | Nhà hàng nổi bật
          .hot-restaurants
            - @hot_restaurants.each do |restaurant|
              = link_to restaurant.name, restaurant
      .col-sm-7.col-md-9
        = render "search"
        .company-detail-wrapper
          .filter-wrapper
          .restaurant-list-wrapper
            - @restaurants.each do |restaurant|
              .restaurant-item-list
                .col-md-2.image
                  = image_tag restaurant.url_avatar unless restaurant.url_avatar.blank?
                .col-md-10.restaurant-content
                  .row
                    .col-sm-7.col-md-8
                      h4= link_to restaurant.name, restaurant
                      .meta-div= restaurant.address
                      p.texing= restaurant.description
                      p.pull-left class="rate-#{restaurant.id}"
                      span.rate-vote= "(#{restaurant.rates.count})"
                      javascript:
                        $(document).ready(function(){
                          $(".rate-#{restaurant.id}").rateYo({
                            rating: "#{restaurant.calc_rate}",
                            starWidth: "20px",
                            readOnly: true
                          })
                        });
                    .col-sm-5.col-md-4
                      ul.meta-list
                        li
                          span Giờ mở cửa:
                          = "#{float_to_time restaurant.open_time} ~ #{float_to_time restaurant.close_time}"
                        li
                          span Đặt tối thiểu:
                          = number_to_currency restaurant.min_order
                      = link_to "Đặt hàng", restaurant, class: "btn btn-primary"
                .clearfix
        .paper-wrapper
          - if @restaurants.empty?
            span.color-red Không có nhà hàng nào được tìm thấy!

          .page-list= paginate @restaurants

